{
  "manifest_version": 2,
  "name": "Swagger UI",
  "version": "1.0.0",
  "description": "Swagger UI client to access OpenAPI supported APIs",

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png"
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "Swagger UI",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "<all_urls>",
    "tabs"
  ]
}
